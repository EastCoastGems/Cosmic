<!-- Shopify Card Product Snippet - Recreated for Theme Check Compliance -->
{%- if card_product -%}
  <div class="card-wrapper">
    <div class="card">
      <div class="card__media" style="aspect-ratio: 1/1; position: relative; background: rgba(34,8,69,0.2);">
        {%- if card_product.featured_image -%}
          <img src="{{ card_product.featured_image | image_url: '400x400' }}" alt="{{ card_product.title }}" width="400" height="400" style="width:100%;height:100%;object-fit:cover;aspect-ratio:1/1;display:block;border-radius:12px;background:#2a0845;" loading="lazy">
        {%- else -%}
          <div class="placeholder" style="width:100%;height:100%;display:flex;align-items:center;justify-content:center;background:#2a0845;color:#fff;border-radius:12px;">{{ 'onboarding.product_title' | t }}</div>
        {%- endif -%}
      </div>
      <div class="card__content">
        <h3>{{ card_product.title }}</h3>
        {%- if show_vendor -%}
          <div>{{ card_product.vendor }}</div>
        {%- endif -%}
        {% render 'price', product: card_product %}
      </div>
    </div>
  </div>
{%- else -%}
  <div class="card-wrapper">
    <div class="card">
      <div class="card__media">
        <div class="placeholder">{{ 'onboarding.product_title' | t }}</div>
      </div>
      <div class="card__content">
        <h3>{{ 'onboarding.product_title' | t }}</h3>
        {% render 'price', placeholder: true %}
      </div>
    </div>
  </div>
{%- endif -%}
